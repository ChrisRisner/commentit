doctype html
html(lang="en")
  head
    title
        | Comm(ent|it) - 
        block title
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    meta(name="description" content="Comm(ent|it) is a tool for Github Pages. It uses the Github API and Jekyll to help you store visitors comments directly in your repository.")
    if ('production' == settings.env)
      link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.5/darkly/bootstrap.min.css", rel="stylesheet")
      link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css", rel="stylesheet")
    else
      link(href="/static/inc/bootswatch-dist/css/bootstrap.min.css", rel="stylesheet")
      link(href="/static/inc/font-awesome/css/font-awesome.min.css", rel="stylesheet")
    style
      include ../static/css/style.min.css
      block css

  body
    .container#header
      .row#header-row
        .col-md-6
          h1
            a(href="/") Comm(ent|it) <small>Beta</small>
    if (fullyAuthenticated)
      .container
        nav.navbar.navbar-inverse
          .navbar-header
            button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#menu" aria-expanded="false")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand.hidden-lg.hidden-md.hidden-sm(href="#") Menu
          .collapse.navbar-collapse#menu
            ul.nav.navbar-nav
              li
                a(href="/") Home
              li
                a(href="/getting-started") Getting started
              li
                a(href="/settings") Settings
              li
                a(href="/faq") FAQ
            ul.nav.navbar-nav.navbar-right
              li
                p.navbar-text  Signed in as <a href="#{user.url}" class="navbar-link">@#{user.username}</a>
              li
                a(href="/logout") Logout
    .container#normal-page
      block content
    .container#footer
      .row
        .col-md-4.text-left
          p.text-muted.
            Created by <a href="https://guilro.github.io" target="_blank">@guilro</a> -
            Read <a href="/tos">Terms of Service</a>
          p.text-muted.
            Contribute and report issues on <a href="https://github.com/guilro/commentit/issues">Github</a>


    if ('production' == settings.env)
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
      script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
      script(src="//cdn.jsdelivr.net/jquery.localscroll/1.4.0/jquery.localScroll.min.js")
      script(src="//cdn.jsdelivr.net/jquery.scrollto/2.1.2/jquery.scrollTo.min.js")
    else
      script(src="/static/inc/jquery/dist/jquery.min.js")
      script(src="/static/inc/bootswatch-dist/js/bootstrap.min.js")
      script(src="/static/inc/jquery.localScroll/jquery.localScroll.min.js")
      script(src="/static/inc/jquery.scrollTo/jquery.scrollTo.min.js")
    block javascript_footer
